{
  "name": "storefront-backend-api",
  "version": "1.0.0",
  "description": "The backend of the StoreFront ",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "test": "npm run build && npm run jasmine",
    "start": "nodemon src/server.ts",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test-db": "cross-env NODE_ENV=test db-migrate --env test up && jasmine",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "drop-db-test": "cross-env NODE_ENV=test db-migrate --env test up && jasmine && db-migrate db:drop test",
    "jasmine": "jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azutech/StoreFront-Backend-API.git"
  },
  "author": "Emmanuel Onugha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Azutech/StoreFront-Backend-API/issues"
  },
  "homepage": "https://github.com/Azutech/StoreFront-Backend-API#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "pg": "^8.7.3",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.15",
    "prettier": "2.6.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.7.0",
    "tsc-watch": "^5.0.3"
  }
}
